{% extends 'base.html.twig' %}

{% block body %}

{% for message in app.flashes('bestellt') %}
	<div class="alert alert-success">
		<h4>{{ message }}</h4>
	</div>
{% endfor %}

<!-- Playlist section -->
	<section class="playlist-section spad">
		<div class="container-fluid">
			<div class="section-title">
				<h2>Menükarte</h2>
			</div>
			<div class="container">
				<ul class="playlist-filter controls">
					<li class="control" data-filter=".Getränke">Getränke</li>
					<li class="control" data-filter=".Vorspeise">Vorspeise</li>
					<li class="control" data-filter=".Hauptspeise">Hauptspeise</li>
					<li class="control" data-filter=".Nachspeise">Nachspeise</li>
					<li class="control" data-filter="all">Alle Gerichte</li>
				</ul>
			</div>                                              
			<div class="clearfix"></div>
			<div class="row playlist-area">

            {% for gericht in gerichte %}
				<div class="mix col-lg-3 col-md-4 col-sm-6 {{gericht.kategorie}}">
					<div class="playlist-item">
						<img src="{{ asset('uploads/'~ gericht.bild)}}" alt="">
						<h5>{{gericht.name}} - € {{gericht.preis}}</h5>
                        <p><b>BestNr.: {{gericht.id}}</b> {{gericht.beschreibung}}</p>
						<a class="btn btn-outline-danger btn-sm" href="{{ path('bestellen',{id: gericht.id}) }}" role="button">bestellen</a>
					</div>
				</div>
			{% endfor %}	

			</div>
		</div>
	</section>
	<!-- Playlist section end -->
{% endblock %}
