{% extends 'base.html.twig' %}

{% block title %}Liste{% endblock %}

{% block body %}
<!-- Flash Message -->
{% for message in app.flashes('Erfolg') %}
    <div class="alert alert-success">
        <h4>{{ message }}</h4>
    </div>
{% endfor %}

<br>
<div class="container">
<h2>Neuer Kunden Eintrag</h2>
<br>
    

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ liste.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ liste.name }}</td>
            </tr>
            <tr>
                <th>Strasse</th>
                <td>{{ liste.strasse }}</td>
            </tr>
            <tr>
                <th>Plz</th>
                <td>{{ liste.plz }}</td>
            </tr>
            <tr>
                <th>Stadt</th>
                <td>{{ liste.stadt }}</td>
            </tr>
            <tr>
                <th>Telefon</th>
                <td>{{ liste.telefon }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ liste.email }}</td>
            </tr>
            <tr>
                <th>Geburtsdatum</th>
                <td>{{ liste.geburtsdatum }}</td>
            </tr>
            <tr>
                <th>GastEintrag</th>
                <td>{{ liste.gastEintrag }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('liste.index') }}">zurück</a><br>

    <a href="{{ path('liste.edit', {'id': liste.id}) }}">ändern</a>

    {{ include('liste/_delete_form.html.twig') }}
    </div>
{% endblock %}
