{% extends 'base.html.twig' %}

{% block body %}
<br>
<div class="container">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">Unbekanter Mitarbeiter!</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Du bist eingeloggt als {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">Logout</a>
        </div>
    {% endif %}

    <h2 class="h3 mb-3 font-weight-normal">Bitte einloggen</h2>
    <br>
    <label for="inputUsername">Mitarbeiter</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
    <label for="inputPassword">Passwort</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Login
    </button>
</form>
</div>
{% endblock %}
